{
  "name": "conflux",
  "displayName": "Conflux",
  "description": "",
  "version": "0.0.1",
  "engines": {
    "vscode": "^1.55.0"
  },
  "categories": [
    "Other"
  ],
  "activationEvents": [
    "onCommand:conflux.helloWorld",
    "onCommand:conflux.search",
    "onCommand:conflux.refresh",
    "onCommand:conflux.document",
    "onOpenExternalUri:conflux.document",
    "onView:conflux-sidebar"
  ],
  "main": "./dist/extension.js",
  "contributes": {
    "commands": [
      {
        "command": "conflux.helloWorld",
        "title": "Hello World",
        "category": "Conflux"
      },
      {
        "command": "conflux.search",
        "title": "Search",
        "category": "Conflux"
      },
      {
        "command": "conflux.refresh",
        "title": "Refresh WebView with Developer Tools",
        "category": "Conflux"
      }
    ],
    "viewsContainers": {
      "activitybar": [
        {
          "id": "conflux-sidebar-view",
          "title": "Conflux",
          "icon": "media/book.svg"
        }
      ]
    },
    "views": {
      "conflux-sidebar-view": [
        {
          "type": "webview",
          "id": "conflux-sidebar",
          "name": "Conflux",
          "icon": "media/book.svg",
          "contextualTitle": "Conflux"
        }
      ]
    }
  },
  "scripts": {
    "vscode:prepublish": "npm run package",
    "compile": "webpack",
    "watch": "concurrently \"rollup -c -w\" \"webpack --watch\"",
    "package": "webpack --mode production --devtool hidden-source-map",
    "test-compile": "tsc -p ./",
    "test-watch": "tsc -watch -p ./",
    "pretest": "npm run test-compile && npm run lint",
    "lint": "eslint src --ext ts",
    "test": "node ./out/test/runTest.js"
  },
  "devDependencies": {
    "@rollup/plugin-commonjs": "^18.0.0",
    "@rollup/plugin-node-resolve": "^11.2.1",
    "@rollup/plugin-typescript": "^8.2.1",
    "@tsconfig/svelte": "^1.0.10",
    "@types/glob": "^7.1.3",
    "@types/mocha": "^8.0.4",
    "@types/node": "^12.11.7",
    "@types/vscode": "^1.55.0",
    "@typescript-eslint/eslint-plugin": "^4.14.1",
    "@typescript-eslint/parser": "^4.14.1",
    "concurrently": "^6.0.2",
    "eslint": "^7.19.0",
    "glob": "^7.1.6",
    "mocha": "^8.2.1",
    "rollup": "^2.3.4",
    "rollup-plugin-svelte": "6.1.1",
    "rollup-plugin-terser": "^7.0.2",
    "svelte": "^3.37.0",
    "svelte-check": "^1.4.0",
    "svelte-preprocess": "^4.7.0",
    "ts-loader": "^8.0.14",
    "typescript": "^4.1.3",
    "vscode-test": "^1.5.0",
    "webpack": "^5.19.0",
    "webpack-cli": "^4.4.0"
  },
  "dependencies": {
    "@webda/confluence-api": "^2.0.0-beta.0"
  }
}
